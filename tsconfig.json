{
    "compilerOptions": {
        "target"          : "es2017",
        "module"          : "esnext",
        "lib"             : [
            "dom",
            "es2017",
            "scripthost"
        ],
        "jsx"             : "react",
        "declaration"     : false,
        "sourceMap"       : true,
        "outDir"          : "./dist/js",
        "strict"          : true,
        "moduleResolution": "node",
        "typeRoots"       : [
            "./node_modules/@types"
        ],
        "experimentalDecorators": true,
        "downlevelIteration"    : true,
        "esModuleInterop"       : true
    },
    "exclude"        : [
        "node_modules"
    ]
}
